<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
   	<record model = 'ir.ui.view' id = 'loans_form_view'>
   		<field name = 'name'>loans.form.view</field>
   		<field name = 'model'>sacco.loan</field>
   		<field name = 'arch' type = 'xml'>
   			<form>
   				<header>
                  <button name="appraise_loan" type = "object" string = "Appraise Loan" attrs="{'invisible': [('status', 'not in', ['draft','appraisal'])]}"/>
                  <button name="print_appraisal_report" type = "object" string = "Appraisal Report" />
                  <button name="generate_schedule" type = "object" string = "Generate Schedule" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                  <button name = "approve" type = 'object' string = "Approve" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                  <button name = "reset_to_draft" type = 'object' string = "Reset to Draft?" attrs="{'invisible': ['|',('status', '=', 'draft'),('posted','=',1)]}"/>
                  <field name = 'status' widget = 'statusbar'/>
               </header>
   				<sheet>
   					<group colspan = '2'>
   						<group string = 'General'>
   							<field name = 'name'/>
                        <field name = 'application_date'/>
							   <field name = 'member_no'/>
                        <!--<field name = 'member_name'/>-->
                        <field name = 'employer_code'/>
                        <field name = 'staff_no'/>
                        <field name = 'loan_product_type' string = "Loan Product"/>
                        <field name = 'installments'/>
                        <field name = 'interest'/>
                        <field name = 'batch_no'/>
                        <field name = 'requested_amount'/>
                        <field name = 'approved_amount'/>

   						</group>
   						<group string = '.'>

                        <field name = 'issued_date'/>
                        <!--<field name = 'appraisal_status'/>-->
       						<field name = 'posted'/>
                        <field name = 'loan_balance_due'/>
                        <field name = 'loan_balance'/>
                        <field name = 'interest_due'/>
                        <field name = 'interest_balance'/>
                        <field name = 'guarantors'/>
                        <field name = 'guaranteed_amount'/>
                        <field name = 'cleared'/>
                        <field name = 'defaulted'/>
                        <field name = 'loan_purpose'/>


   						</group>
   					</group>
   					<notebook>

                     <page string = "Repayment Schedule">
                        <field name = 'schedule_ids'>
                           <tree>
                              <field name = 'installment'/>
                              <field name = 'period_paid'/>
                              <field name = 'loan_balance'/>
                              <field name = 'principal' sum = "principal"/>
                              <field name = 'interest' sum = "interest"/>
                              <field name = 'risk' sum = "risk"/>
                              <field name = 'total' sum = "total"/>
                              <field name = 'principal_paid'/>
                              <field name = 'interest_paid'/>
                           </tree>

                        </field>


                     </page>

                     <page string = 'Member Salary Details'>
                           <group colspan = '2'>
                              <group>
                                 <field name = 'basic_pay'/>
                                 <field name = 'earnings'/>
                                 <field name = 'deductions'/>

                              </group>
                              <group>
                                 <field name = 'net_pay'/>
                                 <field name = 'expected_repayment_deduction'/>
                                 <field name = 'expected_net_pay'/>

                              </group>
                           </group>
                     </page>
                     <page string = 'Loan Topup Details'>
                        <field name = 'topup_id'>
                           <tree>
                              <field name = 'loan_top_up'/>
                              <field name = 'member_no'/>
                              <field name = 'loan_type'/>
                              <field name = 'principle_topup'/>
                              <field name = 'total_topup'/>
                              <field name = 'monthly_repayment'/>
                              <field name = 'outstanding_balance'/>
                              <field name = 'interest_rate'/>
                              <field name = 'commission'/>

                           </tree>
                        </field>
                     </page>
   						<page string = 'Guarantors'>
   							<field name = 'guarantor_id'>
   								<tree editable = 'bottom'>
                              <field name = 'name'/>

   									<field name = 'shares' />
                              <field name = 'deposits'/>

   									<field name = 'amount_guaranteed' />
                              <field name = 'date' />


   								</tree>
   							</field>
   						</page>
                     <page string = 'Loan Securities'>
                        <field name = 'loan_security_id'>
                           <tree editable = 'bottom'>
                              <field name = 'name' />
                              <field name = 'description' />
                              <field name = 'value' />
                              <field name = 'guarantee_value' />
                              <field name = 'remarks' />
                           </tree>
                        </field>
                     </page>

   					</notebook>
   				</sheet>
            </form>
   		</field>

   		<!--/field-->
   	</record>
   	<record model = 'ir.ui.view' id = 'loans_tree_view'>
   		<field name = 'name'>loans.tree.view</field>
   		<field name = 'model'>sacco.loan</field>
